{% extends "base.jinja2" %}
{% set active_page = 'withdrawal' %}
{% block title %}Withdrawal{% endblock %}

{% block top %}
<h1 class="page-header">Withdrawal</h1>
{% endblock %}


{% block content %}

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add a Cash Withdrawal</h3>
      </div>
      <div class="panel-body">

        <p>Withdraw cash from Chez Betty to move to a different account.</p>
        <p>This is most useful for entering miscellaneous payments for events or other things
        that Betty is paying for.</p>

        <form role="form" action="/admin/cash/withdrawal/submit" method="post" class="form-horizontal">

          <div class="form-group">
            <label for="withdrawal-amount" class="col-sm-2 control-label">Amount:</label>
            <div class="col-sm-10">
              <div class="input-group">
                <span class="input-group-addon">$</span>
                <input type="text" class="form-control" id="withdrawal-amount" name="amount">
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="withdrawal-reason" class="col-sm-2 control-label">Reason:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="withdrawal-reason" name="notes">
            </div>
          </div>

          <div class="form-group">
            <label for="withdrawal-reimbursee" class="col-sm-2 control-label">Receiver:</label>
            <div class="col-sm-10">
              <select class="form-control" id="withdrawal-reimbursee" name="reimbursee">
                {% for reimbursee in reimbursees %}
                <option value="{{ reimbursee.id }}">{{ reimbursee.name }}</option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="withdrawal-date" class="col-sm-2 control-label">
              Set custom time for this withdrawal or leave blank to use current time:
            </label>
            <div class="col-sm-10">
              <input type="text" id="withdrawal-date" name="withdrawal-date" class="event-date-picker">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-success">Withdraw</button>
            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>

{% endblock %}
