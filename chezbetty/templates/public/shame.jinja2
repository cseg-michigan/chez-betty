{% extends "base.jinja2" %}
{% block title %}{{ _('Wall of Shame') }}{% endblock %}
{% block header %}{{ _('Wall of Shame') }}{% endblock %}

{% block content %}

<p class="lead">{{ _('These users owe Chez Betty more than $5.') }}</p>

<p><a href="/shame.csv">Download csv of the Wall of Shame</a></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{ _('Users in Debt') }}</h3>
  </div>
  <div class="panel-body">
    <table class="table table-bordered table-striped sortable">
      <thead>
        <tr>
          <th>{{ _('Name') }}</th>
          <th style="width: 20%">{{ _('uniqname') }}</th>
          <th style="width: 20%">{{ _('Account Balance') }}</th>
          <th style="width: 20%">{{ _('Days on Wall of Shame') }}</th>
        </tr>
      </thead>

      <tbody>
      {% for user in users %}
        <tr>
          <td>{{ user.name }}</td>
          <td>{{ user.uniqname }}</td>
          <td>{{ user.balance|format_currency|safe }}</td>
          <td style="text-align: right;">{{ user.days_on_shame }}</td>
        </tr>
      {% endfor %}
      </tbody>

    </table>
  </div>
</div>

{% endblock %}
